<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/location_details_banner"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view10"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/drag_handle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nicknameTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:text="Change Nickname"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_neutral_variant50"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nicknameText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/radio_btn_bg"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="user"
                android:textColor="#000000" />

        </LinearLayout>

        <TextView
            android:id="@+id/nicknameTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Choose an Avatar"
            android:textAlignment="center"
            android:textColor="@color/material_dynamic_neutral_variant50"
            android:textSize="16sp"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gridViewAvatars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="16dp"
            android:numColumns="3"
            android:padding="16dp"
            android:verticalSpacing="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>